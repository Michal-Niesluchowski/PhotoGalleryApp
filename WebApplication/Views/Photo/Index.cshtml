@model PhotoViewModel

@{
    ViewData["Title"] = "My photo gallery";
}

<div class="panel panel-default photo-panel">

    <div class="panel-heading">@ViewData["Title"]</div>

    <table class="table table-hover">
        <thead>
            <tr>
                <td>&#x2714;</td>
                <td>Title</td>
                <td>Description</td>
                <td>Tags</td>
            </tr>
        </thead>

        @foreach (var item in Model.Items)
        {
            <tr>
                <td>placeholder for photo</td>
                <td>@item.Title</td>
                <td>@item.Description</td>
                <td>@item.Tags</td>
            </tr>
        }

    </table>

    <div class="panel-footer add-photo-form">
        @await Html.PartialAsync("_AddPhotoPartial", new PhotoItemViewModel()) 
    </div>
</div>

